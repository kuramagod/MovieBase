<Window x:Class="MovieBase.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieBase"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Авторизация" 
        Background="Transparent"
        Height="440" Width="560">

    <Window.Resources>
        <Style x:Key="RoundedInputStyle" TargetType="Control">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Control">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="10,0" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#D32F2F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF4343"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RegisterLinkStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock x:Name="txt" 
                               Text="Регистрация" 
                               Foreground="#BDBDBD" 
                               FontSize="14" 
                               TextDecorations="None"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="txt" Property="TextDecorations" Value="Underline"/>
                                <Setter TargetName="txt" Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#121212"
            CornerRadius="0,0,12,12"
            Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,30">
                <Image Source="/images/logo.png" Width="38" Height="37"/>
                <TextBlock Text="MovieBase"
                           Foreground="#D32F2F"
                           FontSize="28"
                           FontWeight="SemiBold"/>
            </StackPanel>

            <StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="0,10,0,0">

                <TextBlock 
                    Text="Логин" 
                    Foreground="White" 
                    FontSize="14" 
                    Margin="0,0,0,6"/>
                
                <TextBox 
                    x:Name="loginTxt" 
                    Height="40" 
                    Style="{StaticResource RoundedInputStyle}"/>
                
                <TextBlock 
                    Text="Пароль" 
                    Foreground="White" 
                    FontSize="14" 
                    Margin="0,20,0,6"/>
                
                <PasswordBox 
                    x:Name="passwordTxt" 
                    Height="40" 
                    Style="{StaticResource RoundedInputStyle}"/>
                
                <Button Content="Войти"
                    Style="{StaticResource LoginButtonStyle}" 
                    Margin="0,30,0,10" 
                    Click="Button_Click"/>

                <Button Style="{StaticResource RegisterLinkStyle}" 
                    HorizontalAlignment="Left" 
                    Click="Registration_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
