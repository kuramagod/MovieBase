<Window x:Class="MovieBase.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieBase"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Авторизация" 
        Background="Transparent"
        Height="440" Width="560">

    <Border Background="#121212"
            CornerRadius="0,0,12,12"
            Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,30">
                <Image Source="/images/logo.png" Width="38" Height="37"/>
                <TextBlock Text="MovieBase"
                           Foreground="#D32F2F"
                           FontSize="28"
                           FontWeight="SemiBold"/>
            </StackPanel>

            <StackPanel Grid.Row="1"
                        VerticalAlignment="Top"
                        Margin="0,10,0,0">

                <!-- Логин -->
                <TextBlock Text="Логин"
                           Foreground="White"
                           FontSize="14"
                           Margin="0,0,0,6"/>

                <TextBox Height="40"
                         FontSize="14"
                         Background="#1E1E1E"
                         x:Name="loginTxt"
                         Foreground="White"
                         BorderBrush="#BDBDBD"
                         Padding="10"/>

                <!-- Пароль -->
                <TextBlock Text="Пароль"
                           Foreground="White"
                           FontSize="14"
                           Margin="0,20,0,6"/>

                <PasswordBox Height="40"
                             FontSize="14"
                             Background="#1E1E1E"
                             x:Name="passwordTxt"
                             Foreground="White"
                             BorderBrush="#BDBDBD"
                             Padding="10"/>

                <!-- Кнопка логина -->
                <Button Content="Войти"
                        Height="42"
                        Margin="0,30,0,10"
                        FontSize="15"
                        Background="#D32F2F"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand" Click="Button_Click"/>

                <!-- Регистрация -->
                <Button Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Left" Click="Registration_Click">
                    <TextBlock Text="Регистрация"
                               Foreground="#BDBDBD"
                               FontSize="14"
                               TextDecorations="Underline"
                               Cursor="Hand"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
