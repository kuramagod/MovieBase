<Page x:Class="MovieBase.MovieFavoritesListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MovieBase"
      mc:Ignorable="d" 
      Title="Избранное"
      Background="Transparent">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <TextBlock Text="Моё избранное" 
                           FontSize="28" 
                           FontWeight="SemiBold" 
                           Foreground="#D32F2F" 
                           Margin="0,0,0,20"/>

                <ItemsControl x:Name="FavoritesListControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Left"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:FavoriteCardFilm Margin="0,0,20,20" Cursor="Hand"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock x:Name="EmptyListMessage"
                           Text="Список избранного пуст."
                           Foreground="Gray"
                           FontSize="18"
                           HorizontalAlignment="Center"
                           Visibility="Collapsed"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
