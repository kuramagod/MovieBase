<UserControl x:Class="MovieBase.CardFilm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MovieBase"
             mc:Ignorable="d" 
             Width="300" Height="480">
    <Border Background="#1E1E1E" CornerRadius="4" ClipToBounds="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Image Grid.Row="0" 
                   Source="{Binding Cover}" 
                   Stretch="UniformToFill" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"/>

            <Grid Grid.Row="1" Background="#1E1E1E" Margin="10, 0, 10, 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="{Binding Title}" 
                           Foreground="White" 
                           FontSize="20" 
                           FontWeight="Normal" 
                           TextWrapping="Wrap"
                           Margin="0,0,0,8"/>

                <DockPanel Grid.Row="1" LastChildFill="False">

                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                        <TextBlock Text="{Binding Year}" Foreground="#9E9E9E" FontSize="16"/>
                        <TextBlock Text=", " Foreground="#9E9E9E" FontSize="16"/>
                        <TextBlock Text="{Binding Genre.Name}" Foreground="#9E9E9E" FontSize="16"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                        <TextBlock Text="⭐" Foreground="#FFD700" FontSize="16" VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <TextBlock Text="{Binding Rating}" Foreground="#FFD700" FontSize="18" FontWeight="Medium" VerticalAlignment="Center"/>
                    </StackPanel>

                </DockPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>