<UserControl x:Class="MovieBase.FavoriteCardFilm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MovieBase"
             mc:Ignorable="d" 
             Height="300" Width="200">
    <Border Background="#1E1E1E" CornerRadius="5" ClipToBounds="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image Grid.Row="0" 
                   Source="{Binding Movie.Cover}" 
                   Stretch="UniformToFill"
                   VerticalAlignment="Center" HorizontalAlignment="Center">

            </Image>

            <Border Grid.Row="1" Background="#2A2A2A" Padding="10">
                <StackPanel>
                    <TextBlock Text="{Binding Movie.Title}" 
                               Foreground="White" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               TextWrapping="Wrap"
                               Margin="0,0,0,5"/>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Добавлено: " 
                                   Foreground="#BDBDBD" 
                                   FontSize="12"/>
                        <TextBlock Text="{Binding Date, StringFormat='{}{0:dd.MM.yyyy}'}" 
                                   Foreground="#BDBDBD" 
                                   FontSize="12"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>