<Window x:Class="MovieBase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieBase"
        mc:Ignorable="d"
        Title="Авторизация" Height="440" Width="560"
        WindowStartupLocation="CenterScreen"
        Background="#121212">
    <Grid>
        <Border Background="#121212"
                CornerRadius="12"
                Padding="20">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,30">
                    <Image Source="/images/logo.png" Width="38" Height="37"/>
                    <TextBlock Text="MovieBase"
                               Foreground="#D32F2F"
                               FontSize="28"
                               FontWeight="SemiBold"/>
                </StackPanel>

                <!-- Content -->
                <StackPanel Grid.Row="1"
                            VerticalAlignment="Top"
                            Margin="0,10,0,0">

                    <!-- Email -->
                    <TextBlock Text="Почта"
                               Foreground="White"
                               FontSize="14"
                               Margin="0,0,0,6"/>

                    <TextBox Height="40"
                             FontSize="14"
                             Background="#1E1E1E"
                             Foreground="White"
                             BorderBrush="#BDBDBD"
                             Padding="10"
                             Text="example@example.com"/>

                    <!-- Password -->
                    <TextBlock Text="Пароль"
                               Foreground="White"
                               FontSize="14"
                               Margin="0,20,0,6"/>

                    <PasswordBox Height="40"
                                 FontSize="14"
                                 Background="#1E1E1E"
                                 Foreground="White"
                                 BorderBrush="#BDBDBD"
                                 Padding="10"/>

                    <!-- Login Button -->
                    <Button Content="Войти"
                            Height="42"
                            Margin="0,30,0,10"
                            FontSize="15"
                            Background="#D32F2F"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"/>

                    <!-- Register -->
                    <TextBlock Text="Регистрация"
                               Foreground="#BDBDBD"
                               FontSize="14"
                               TextDecorations="Underline"
                               Cursor="Hand"
                               HorizontalAlignment="Left"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Window>
