<Window x:Class="MovieBase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:MovieBase"
        mc:Ignorable="d"
        Title="Авторизация" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#121212">
    <Window.Resources>
        <Style x:Key="PlaceholderTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="#D32F2F"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"
                                  VerticalAlignment="Center"
                                  Margin="15,0"
                                  Background="Transparent"
                                  Panel.ZIndex="1"/>

                            <TextBlock x:Name="Placeholder"
                               Text="Название фильма"
                               Foreground="Gray"
                               FontSize="20"
                               VerticalAlignment="Center"
                               Margin="15,0"
                               IsHitTestVisible="False"
                               Panel.ZIndex="0"/>
                        </Grid>
                        <ControlTemplate.Triggers>

                            <!-- Скрываем плейсхолдер при фокусе -->
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed"/>
                            </Trigger>

                            <!-- Показываем плейсхолдер, если нет текста и не наведены и не в фокусе -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value=""/>
                                    <Condition Property="IsMouseOver" Value="False"/>
                                    <Condition Property="IsKeyboardFocused" Value="False"/>
                                </MultiTrigger.Conditions>
                                <MultiTrigger.Setters>
                                    <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                                </MultiTrigger.Setters>
                            </MultiTrigger>

                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value="{x:Static system:String.Empty}"/>
                                    <Condition Property="IsMouseOver" Value="False"/>
                                    <Condition Property="IsKeyboardFocused" Value="False"/>
                                </MultiTrigger.Conditions>
                                <MultiTrigger.Setters>
                                    <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                                </MultiTrigger.Setters>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Background="#1E1E1E" Grid.Row="0">
            <StackPanel Orientation="Horizontal" Margin="10,16" MouseLeftButtonUp="Logo_MouseLeftButtonUp" Cursor="Hand">
                <Image Source="/images/logo.png" Width="38" Height="37"/>
                <TextBlock Text="MovieBase" Foreground="#D32F2F" FontSize="28" FontWeight="SemiBold" Margin="0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Border x:Name="SearchContainer" Background="#2A2A2A" CornerRadius="25" Margin="8" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="SearchTextBox" 
                            Width="500"
                            Height="50"
                            Style="{StaticResource PlaceholderTextBoxStyle}"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            TextChanged="TextBox_TextChanged"/>
                        <Button Style="{StaticResource NoHoverButtonStyle}" Click="ClearSearch_Click" Margin="10,0">
                            <TextBlock Text="✕" Foreground="Gray" FontSize="14"/>
                        </Button>
                    </StackPanel>
                </Border>

                <Button Width="30" Height="30" Margin="10" Style="{StaticResource NoHoverButtonStyle}" Cursor="Hand" Click="FavoritesButton_Click">
                    <Image Source="/images/Vector.png" />
                </Button>
                <Button Width="30" Height="30" Margin="10" Style="{StaticResource NoHoverButtonStyle}">
                    <Image Source="/images/profile.png" />
                </Button>
            </StackPanel>
        </DockPanel>
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden" />


    </Grid>
</Window>
