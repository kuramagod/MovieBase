<Window x:Class="MovieBase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieBase"
        mc:Ignorable="d"
        Title="Авторизация" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#121212">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Background="#1E1E1E" Grid.Row="0"
                   HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

            <StackPanel Orientation="Horizontal" Margin="10,16">
                <Image Source="/images/logo.png" Width="38" Height="37"/>
                <TextBlock Text="MovieBase"
                               Foreground="#D32F2F"
                               FontSize="28"
                               FontWeight="SemiBold"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Border Background="#2A2A2A" CornerRadius="24" Margin="8">
                    <StackPanel Orientation="Horizontal">

                        <TextBox Background="Transparent" BorderBrush="Transparent" Width="541"
                                 Foreground="Gray" VerticalContentAlignment="Center"
                                 Margin="8" FontSize="14"
                                 Text="Название фильма"/>
                        <Button Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Left" 
                                 Margin="16,0" >
                            <Label Background="Transparent" BorderBrush="Transparent"
                                 Foreground="Gray" VerticalContentAlignment="Center" HorizontalAlignment="Right"
                                 FontSize="14"
                                 Content="Х"/>
                        </Button>
                    </StackPanel>
                </Border>
                <Button Width="40" Margin="16" BorderBrush="Transparent">
                    <Button.Background>
                        <ImageBrush ImageSource="/images/Vector.png" Stretch="Uniform" />
                    </Button.Background>
                </Button>
                <Button Width="40" Margin="16" BorderBrush="Transparent">
                    <Button.Background>
                        <ImageBrush ImageSource="/images/profile.png" Stretch="Uniform" />
                    </Button.Background>
                </Button>
            </StackPanel>
        </DockPanel>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="MoviesList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel HorizontalAlignment="Center" Margin="20"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:CardFilm Margin="15" Width="300"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>


    </Grid>
</Window>
