<Page x:Class="MovieBase.MovieDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MovieBase"
      mc:Ignorable="d" 
      Title="MovieDetailPage"
      Background="#121212"
      Foreground="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="40">

            <Grid Margin="0,0,0,40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,40,0" Width="300">
                    <Border Background="#1E1E1E" Height="450" CornerRadius="5">
                        <TextBlock Text="Poster Placeholder" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Gray"/>
                    </Border>

                    <Button Margin="0,25,0,0"
                            Height="54"
                            FontSize="18"
                            FontWeight="Medium"
                            Foreground="White"
                            Cursor="Hand"
                            Content="Добавить в избранное">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="#D32F2F" CornerRadius="27">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#B71C1C"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="{Binding Title}" 
           FontSize="48" FontWeight="Bold" Margin="0,-8,0,24" TextWrapping="Wrap"/>

                    <TextBlock Text="{Binding Description}"
           FontSize="18" Foreground="#CCCCCC" TextWrapping="Wrap" LineHeight="28" Margin="0,0,0,40"/>

                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Год производства: " FontSize="18" Foreground="#9E9E9E"/>
                            <TextBlock Text="{Binding Year}" FontSize="18"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Страна: " FontSize="18" Foreground="#9E9E9E"/>
                            <TextBlock Text="{Binding Contry.Name}" FontSize="18"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Оценка: " FontSize="18" Foreground="#9E9E9E"/>
                            <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                                <TextBlock Text="★" Foreground="#FFC107" FontSize="20" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Rating}" FontSize="20" FontWeight="Bold" Foreground="#FFC107" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <TextBlock Text="Рецензии" FontSize="32" FontWeight="Bold" Margin="0,20,0,25"/>

            <ItemsControl x:Name="ReviewsList" ItemsSource="{Binding Reviews}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#1E1E1E" CornerRadius="12" Padding="30" Margin="0,0,0,20">
                            <StackPanel>
                                <Grid Margin="0,0,0,20">
                                    <TextBlock Text="{Binding User.Username}" FontSize="20" FontWeight="Medium" HorizontalAlignment="Left"/>
                                    <TextBlock Text="{Binding Date, StringFormat=\{0:dd.MM.yyyy HH:mm\}}" FontSize="16" Foreground="#9E9E9E" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Grid>

                                <Border Background="#2A2A2A" Height="1" Margin="0,0,0,20"/>

                                <TextBlock Text="{Binding Title}" FontSize="20" FontWeight="Bold" Margin="0,0,0,12"/>
                                <TextBlock Text="{Binding Text}" FontSize="16" Foreground="#CCCCCC" TextWrapping="Wrap" LineHeight="24"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Rectangle Height="50"/>

        </StackPanel>
    </ScrollViewer>
</Page>